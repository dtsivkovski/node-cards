{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "functions": {
    "api": {
      "runtime": "nodejs14.x",
      "memory": 512,
      "includeFiles": "views/pages/**"  // Include your views/pages directory
    }
  }
}
